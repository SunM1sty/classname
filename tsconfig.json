{
  "compilerOptions": {
    "outDir": "build",
    "module": "ESNext",
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "build"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules", "src/**.test.ts"],
  "include": ["src/**/*.ts"]
}